<h2><%= @step.name %></h2>

<p><%= @step.description %></p>

<% if @step.mindfulness? %>
  <p class="timer-text">Spend <%= Step::MINDFULNESS_DURATION_IN_MINUTES %> minutes of mindfulness on this topic.<br /> Click the Start timer button to begin.</p>

  <%= form_tag do %>
    <% submit_tag "Start Timer", class: "start-button" %>
  <% end %>

  <%= form_tag do %>
    <% submit_tag "Stop Timer", class: "stop-button" %>
  <% end %>
<% end %>

